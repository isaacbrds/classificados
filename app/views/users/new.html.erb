<div style="height: 150%!important;background-image: url('<%= image_path('login_bg2.jpeg') %>'); background-size: cover">
<div class="offset-4 col-4 authentication-inner py-5">
  <div class="card">
    <div class="p-4 p-sm-5">
      <div class="d-flex justify-content-center align-items-center pb-2 mb-4">
        <%= image_tag('logo', style: 'height: 90px;') %>
        </div>
            <% if @user.errors.any? %>
              <p><%= t("title.error")%></p>

              <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            <% end %>
            <br/>
            <%= form_for @user, url: "/users" do |form| %>
              <div class="form-group">
              <%= form.label :name, class: 'form-label' %>
              <%= form.text_field :name, class:" form-control" %>
            </div>

              <div class="form-group">
              <%= form.label :email, class: 'form-label' %>
              <%= form.email_field :email, class:" form-control" %>
            </div>

              <div class="form-group">
              <%= form.label :password, class: 'form-label' %>
              <%= form.password_field :password, class:" form-control" %>
            </div>

              <div class="form-group">
              <%= form.label :password_confirmation, class: 'form-label' %>
              <%= form.password_field :password_confirmation, class:" form-control" %>
            </div>
            <div class="d-flex justify-content-center align-items-center m-0">
              <%= form.submit 'Cadastrar', class: "btn btn-primary" %>
            </div>
              
            <% end %>
          </div>
        </div>
      </div>
    </div>
  