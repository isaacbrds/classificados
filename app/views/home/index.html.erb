<h1>Anúncios</h1>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Título </th>
      <th scope="col">Descrição </th>
      <th scope="col">Preço</th>
      <th scope="col">Criado em</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @ads.each do |ad| %>
    <tr>
      <td><%= ad.id %></td>
      <td><%= ad.title %></td>
      <td><%= ad.description %></td>
      <td><%= ad.price %></td>
      <td><%= ad.created_at.strftime('%d/%m/%Y %H:%M:%S') %></td>
    </tr>
    <% end %>
  </tbody>
</table>
